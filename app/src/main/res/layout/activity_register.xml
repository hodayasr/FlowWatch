<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="20dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText android:id="@+id/etName" android:hint="שם" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/etEmail" android:hint="אימייל" android:inputType="textEmailAddress" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/etPass" android:hint="סיסמה" android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnRegister" android:text="הרשם (הורה)" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp"/>
</LinearLayout>
