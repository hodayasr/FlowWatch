<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="12dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView android:text="Children" android:textSize="18sp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <ListView android:id="@+id/lvChildren" android:layout_width="match_parent" android:layout_height="120dp"/>
    <TextView android:text="Notifications" android:textSize="18sp" android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNotifs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
